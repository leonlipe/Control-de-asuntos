<h2 class="title">Editar usuario </h2>

<%= link_to image_tag("icons/001_59.png", {:alt => "Atrás", :size => "24x24"}), admin_users_path %>


<%= error_messages_for :user %>

<% form_for [:admin , @user ] do |f| -%>
<p><label for="name">Nombre</label><br/>
<%= f.text_field :name %></p>

<p><label for="login">Login</label><br/>
<%= f.text_field :login %></p>

<p><label for="email">Email</label><br/>
<%= f.text_field :email %></p>

<p><label for="password">Password</label><br/>
<%= f.password_field :password %></p>

<p><label for="password_confirmation">Confirmar Password</label><br/>
<%= f.password_field :password_confirmation %></p>

<p><%= submit_tag 'Actualizar' %></p>
<% end -%>

<%= link_to 'Atrás', admin_users_path %>