<h2 class="title">Listado de categorías </h2>
<div style="clear: both;">&nbsp;</div>
<div class="entry">
<table class="index">
  <tr>
	 <th>Tipo</th>
  </tr>

<% @categorias.each do |categoria| %>
  <tr>
	<td><%=h categoria.tipo %></td>
    <td class="actions"><%= link_to  image_tag("icons/001_38.png", {:alt => "Visualizar asunto", :size => "16x16"}), categoria %>
    <%= link_to image_tag("icons/001_45.png", {:alt => "Editar asunto", :size => "16x16"}), edit_categoria_path(categoria) %>
    <%= link_to image_tag("icons/001_05.png", {:alt => "Borrar asunto", :size => "16x16"}), categoria, :confirm => 'Está seguro?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nueva categoria', new_categoria_path %>

</div>