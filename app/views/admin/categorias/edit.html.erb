<h2 class="title">Editando categoría </h2>
<div style="clear: both;">&nbsp;</div>
<div class="entry">
<% form_for(@categoria) do |f| %>
  <%= f.error_messages %>

<p>
    <%= f.label :tipo %><br />
    <%= f.text_field :tipo %>
  </p>
  <p>
    <%= f.submit 'Actualizar' %>
  </p>
<% end %>

<%= link_to 'Ver', @categoria %> |
<%= link_to 'Atrás', categorias_path %>
</div>