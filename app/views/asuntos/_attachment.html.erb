<% if !attachment.id.nil? %>
<li id='attachment_<%=attachment.id %>'>
	<a href='<%=attachment.url %>' class="ablack">
	<%=attachment.name %></a> 
	(<%=attachment.file_size/1.kilobyte %>KB) 
<%= link_to_remote "Eliminar", :url => adjunto_path(:id => attachment), :method => :delete, :html => {:class => "ablack", :title  => "Eliminar este archivo", :id => "eliminar" } %></li>
<% end %>